<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AreaFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Persegi"
        android:textSize="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/editText_baseSquare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter base"
        android:textSize="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        />


    <TextView
        android:id="@+id/text_resSquare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="295dp"/>

    <Button
        android:id="@+id/button_calcSquare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segitiga"
        android:textSize="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="180dp"/>

    <EditText
        android:id="@+id/editText_baseTriangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter base"
        android:textSize="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        />

    <EditText
        android:id="@+id/editText_heightTriangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter height"
        android:textSize="16dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="200dp"
        />

    <TextView
        android:id="@+id/text_resTriangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="16dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="295dp"/>

    <Button
        android:id="@+id/button_calcTriangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lingkaran"
        android:textSize="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="320dp"/>

    <EditText
        android:id="@+id/editText_radiusCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter radius"
        android:textSize="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="340dp"
        />


    <TextView
        android:id="@+id/text_resCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="16dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="295dp"/>

    <Button
        android:id="@+id/button_calcCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        />

</RelativeLayout>